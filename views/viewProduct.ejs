<!-- Isaac Start -->
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= product.productName %> | FluffyFriend</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    html, body {
      height: 100%;
      margin: 0;
      display: flex;
      flex-direction: column;
      font-family: 'Segoe UI', sans-serif;
      background:#fff6fb;
    }

    main { flex: 1; }

    /* Remove old navbar CSS if conflict, but keep theme colors */
    .navbar {
      background:linear-gradient(90deg,#ff8db8,#ff6fa3);
    }
    .navbar-brand {
      color:#fff;
      font-weight:700;
    }
    .nav-link {
      color:#fff !important;
      font-weight:500;
      border-radius:8px;
      padding:8px 14px;
    }

    .price {
      font-weight:700;
      color:#ff4c93;
    }

    footer {
      background: linear-gradient(90deg, #ff8db8, #ff6fa3);
      color: white;
      padding: 12px 0;
      margin-top: auto;
    }

    .back-wrapper {
      margin-bottom: 16px;
      display: flex;
      justify-content: flex-start;
    }

    .btn-back {
      background: #ff6fa3;
      border: none;
      color: white;
      padding: 10px 22px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      box-shadow: 0 4px 12px rgba(255, 111, 163, 0.3);
      transition: all 0.25s ease;
    }
    .btn-back:hover {
      background: #ff8db8;
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(255, 111, 163, 0.4);
    }
    .btn-back:active {
      transform: translateY(0);
      box-shadow: 0 3px 8px rgba(255, 111, 163, 0.3);
    }
  </style>
</head>

<body>

  <!-- ⭐ Inject Partial Navbar Here -->
  <%- include('partials/user_navbar') %>

  <main>
    <div class="container py-5">

      <!-- Back button -->
      <div class="back-wrapper">
        <button class="btn-back" onclick="window.history.back()">
          ← Back
        </button>
      </div>

      <div class="row">
        <div class="col-md-5">
          <% if (product.image) { %>
            <img
              src="/images/products/<%= product.image %>"
              class="img-fluid rounded mb-3"
              alt="<%= product.productName %>">
          <% } else { %>
            <div class="border rounded d-flex align-items-center justify-content-center mb-3"
                 style="height:300px;background:#fff;">
              <span class="text-muted">No image</span>
            </div>
          <% } %>
        </div>

        <div class="col-md-7">
          <h2 class="mb-2"><%= product.productName %></h2>
          <p class="text-muted mb-2">Category: <%= product.category || '-' %></p>
          <p class="price fs-4 mb-3">$<%= Number(product.price).toFixed(2) %></p>
          <p class="mb-2">Stock available: <strong><%= product.quantity %></strong></p>

          <% const desc = (product.description && String(product.description).trim().length)
                ? product.description
                : 'No description available.'; %>

          <div class="mt-3">
            <h5 class="mb-2">Description</h5>
            <p class="mb-0"><%= desc %></p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

</body>
</html>
<!-- Isaac End -->
