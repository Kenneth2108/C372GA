<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html {
      height: 100%;
    }
    body {
      background: #fff6fb;
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    main.ff-main {
      flex: 1 0 auto;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding-bottom: 40px;
    }
    .navbar {
      background: linear-gradient(90deg, #ff8db8, #ff6fa3);
    }
    .navbar-brand, .nav-link {
      color: #fff !important;
      font-weight: 600;
    }
    .invoice-card {
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 25px 60px rgba(255, 111, 163, 0.25);
      padding: 32px;
      margin-top: 40px;
    }
    .invoice-header span {
      display: inline-block;
      font-size: 0.85rem;
      text-transform: uppercase;
      color: #ff6fa3;
      letter-spacing: 0.08em;
    }
    .summary-box {
      border-radius: 16px;
      background: #fff6fb;
      padding: 18px;
    }
    .summary-box h5 {
      font-weight: 700;
    }
    .summary-box .amount {
      font-size: 1.25rem;
      font-weight: 700;
      color: #ff6fa3;
    }
    .btn-pink {
      background-color: #ff6fa3;
      border: none;
      color: #fff;
    }
    .btn-pink:hover {
      background-color: #ff8db8;
    }
    .btn-outline-pink {
      border: 1px solid #ff6fa3;
      color: #ff6fa3;
    }
    .btn-outline-pink:hover {
      background-color: #ff6fa3;
      color: #fff;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm">
    <div class="container">
      <a class="navbar-brand" href="/">üêæ FluffyFriend</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/UserProducts">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="ff-main w-100">
    <div class="container invoice-card">
      <div class="d-flex justify-content-between align-items-start invoice-header">
        <div>
          <span>Invoice</span>
          <h2 class="fw-bold mt-1 mb-0"><%= invoiceMeta.number %></h2>
          <p class="text-muted mb-0">Date: <%= invoiceMeta.date.toDateString() %></p>
        </div>
        <div>
          <p class="fw-semibold mb-0"><%= user && user.username ? user.username : 'Customer' %></p>
          <p class="text-muted mb-0"><%= user && user.email ? user.email : '' %></p>
        </div>
      </div>

      <div class="table-responsive mt-4">
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th>Product</th>
            <th class="text-center" style="width:110px;">Price</th>
            <th class="text-center" style="width:110px;">Quantity</th>
            <th class="text-end" style="width:150px;">Line Total</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(item) { %>
            <tr>
              <td>
                <strong><%= item.productName %></strong>
                <% if (item.image) { %>
                  <div class="text-muted small mt-1">SKU: <%= item.product_id %></div>
                <% } %>
              </td>
              <td class="text-center">$<%= item.price.toFixed(2) %></td>
              <td class="text-center"><%= item.quantity %></td>
              <td class="text-end">$<%= item.lineTotal.toFixed(2) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

      <div class="row mt-4">
      <div class="col-md-6">
        <div class="summary-box h-100">
          <h5>Notes</h5>
          <p class="text-muted mb-0">
            Thank you for shopping with FluffyFriend. Save this invoice for your records.
            Reach our support at paws@fluffyfriend.com for any questions.
          </p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="summary-box">
          <div class="d-flex justify-content-between">
            <span>Subtotal</span>
            <span>$<%= summary.subtotal.toFixed(2) %></span>
          </div>
          <div class="d-flex justify-content-between">
            <span>Tax (<%= (summary.taxRate * 100).toFixed(0) %>%)</span>
            <span>$<%= summary.taxAmount.toFixed(2) %></span>
          </div>
          <hr>
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Total</h5>
            <div class="amount">$<%= summary.total.toFixed(2) %></div>
          </div>
        </div>
      </div>
    </div>

      <div class="mt-4 d-flex justify-content-between">
        <a href="/cart" class="btn btn-outline-secondary">Back to Cart</a>
        <div class="d-flex gap-2">
          <button class="btn btn-outline-pink" onclick="window.print()">Print</button>
          <a href="/" class="btn btn-pink">Return Home</a>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
