<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      color-scheme: light;
    }
    /* Pink Navbar (shared styling for partial) */
    .navbar {
      background: linear-gradient(90deg, #ff8db8, #ff6fa3);
    }
    .navbar-brand, .nav-link {
      color: white !important;
      font-weight: 500;
    }
    .nav-link.active {
      text-decoration: underline;
    }
    .nav-link:hover {
      background-color: #ff8db8;
      border-radius: 6px;
      color: #fff !important;
    }
    html {
      height: 100%;
    }
    body {
      background: linear-gradient(180deg, #fff6fb 0%, #ffecf5 100%);
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    main.ff-main {
      flex: 1 0 auto;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 40px 0 80px;
      width: 100%;
    }
    .invoice-card {
      background: #fff;
      border-radius: 24px;
      box-shadow: 0 25px 60px rgba(255, 111, 163, 0.2);
      padding: 40px;
      margin-top: 40px;
      border: 1px solid #ffe1ee;
    }
    .invoice-header span {
      display: inline-block;
      font-size: 0.85rem;
      text-transform: uppercase;
      color: #ff6fa3;
      letter-spacing: 0.08em;
    }
    .summary-box {
      border-radius: 16px;
      background: #fff6fb;
      padding: 18px;
      border: 1px solid #ffe1ee;
    }
    .summary-box h5 {
      font-weight: 700;
    }
    .summary-box .amount {
      font-size: 1.25rem;
      font-weight: 700;
      color: #ff6fa3;
    }
    .btn-pink {
      background-color: #ff6fa3;
      border: none;
      color: #fff;
    }
    .btn-pink:hover {
      background-color: #ff8db8;
    }
    .btn-outline-pink {
      border: 1px solid #ff6fa3;
      color: #ff6fa3;
    }
    .btn-outline-pink:hover {
      background-color: #ff6fa3;
      color: #fff;
    }
  </style>
</head>

<body>

  <!-- âœ… USER NAV PARTIAL -->
  <% if (adminView) { %>
    <%- include('partials/admin_navbar', { active: '' }) %>
  <% } else { %>
    <%- include('partials/user_navbar', { active: '' }) %>
  <% } %>

  <main class="ff-main w-100">
    <div class="container invoice-card">
      <div class="d-flex justify-content-between align-items-start invoice-header">
        <div>
          <span>Invoice</span>
          <h2 class="fw-bold mt-1 mb-0"><%= invoiceMeta.number %></h2>
          <p class="text-muted mb-0">Date: <%= invoiceMeta.date.toDateString() %></p>
        </div>
        <div>
          <p class="fw-semibold mb-0"><%= user && user.username ? user.username : 'Customer' %></p>
          <p class="text-muted mb-0"><%= user && user.email ? user.email : '' %></p>
        </div>
      </div>

      <div class="table-responsive mt-4">
        <table class="table table-bordered align-middle">
          <thead class="table-light">
            <tr>
              <th>Product</th>
              <th class="text-center" style="width:110px;">Price</th>
              <th class="text-center" style="width:110px;">Quantity</th>
              <th class="text-end" style="width:150px;">Line Total</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(function(item) { %>
              <tr>
                <td><strong><%= item.productName %></strong></td>
                <td class="text-center">$<%= item.price.toFixed(2) %></td>
                <td class="text-center"><%= item.quantity %></td>
                <td class="text-end">$<%= item.lineTotal.toFixed(2) %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="row mt-4">
        <div class="col-md-6">
          <div class="summary-box h-100">
            <h5>Notes</h5>
            <p class="text-muted mb-0">
              Thank you for shopping with FluffyFriend. Save this invoice for your records.
              Reach our support at paws@fluffyfriend.com for any questions.
            </p>
          </div>
        </div>

        <div class="col-md-6">
          <div class="summary-box">
            <div class="d-flex justify-content-between">
              <span>Subtotal</span>
              <span>$<%= summary.subtotal.toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Tax (<%= (summary.taxRate * 100).toFixed(0) %>%)</span>
              <span>$<%= summary.taxAmount.toFixed(2) %></span>
            </div>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Total</h5>
              <div class="amount">$<%= summary.total.toFixed(2) %></div>
            </div>
          </div>
        </div>
      </div>

      <%
        const backHref = (typeof backLink !== 'undefined')
          ? backLink
          : (adminView ? '/admin/orders' : '/cart');
        const backLabelText = (typeof backLabel !== 'undefined')
          ? backLabel
          : (adminView ? 'Back to Orders' : 'Back to Cart');
      %>

      <div class="mt-4 d-flex justify-content-between">
        <a href="<%= backHref %>" class="btn btn-outline-secondary"><%= backLabelText %></a>
        <div class="d-flex gap-2">
          <button class="btn btn-outline-pink" onclick="window.print()">Print</button>
          <a href="/" class="btn btn-pink">Return Home</a>
        </div>
      </div>

    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
