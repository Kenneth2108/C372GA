<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout Payment</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      color-scheme: light;
      --pink-700: #ff4f8f;
      --pink-600: #ff6fa3;
      --pink-500: #ff8db8;
      --pink-200: #ffd1e6;
      --pink-100: #ffe6f1;
      --ink-900: #2b1b2b;
      --ink-700: #5c3c55;
      --ink-500: #7c5a73;
      --ink-400: #b08aa1;
      --border: #f3d5e4;
      --bg: #fff4f9;
      --card: #ffffff;
      --shadow: 0 18px 40px rgba(255, 94, 158, 0.18);
    }
    body {
      background:
        radial-gradient(circle at 20% 10%, rgba(255, 141, 184, 0.22), transparent 45%),
        radial-gradient(circle at 80% 0%, rgba(255, 111, 163, 0.2), transparent 42%),
        linear-gradient(180deg, #fff7fb 0%, #fff2f8 45%, #ffeef6 100%);
      font-family: 'Inter', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .pink-navbar {
      background: linear-gradient(90deg, var(--pink-500), var(--pink-700));
      box-shadow: 0 12px 32px rgba(255, 111, 163, 0.24);
      border-bottom: 1px solid rgba(255, 255, 255, 0.25);
    }
    .pink-navbar .navbar-brand,
    .pink-navbar .nav-link {
      color: #fff;
      font-weight: 600;
    }
    .pink-navbar .nav-link:hover,
    .pink-navbar .nav-link:focus {
      color: #ffe4f0;
    }
    .pink-navbar .navbar-toggler {
      border-color: rgba(255,255,255,0.4);
    }
    .pink-navbar .navbar-toggler-icon {
      filter: brightness(0) invert(1);
    }
    .ff-main {
      flex: 1 0 auto;
      padding: 42px 0 96px;
    }
    .checkout-hero {
      max-width: 760px;
      margin: 0 auto 30px;
    }
    .checkout-hero .eyebrow-label {
      letter-spacing: 0.14em;
      text-transform: uppercase;
      font-size: 0.72rem;
      color: var(--ink-400);
      font-weight: 700;
      margin-bottom: 0.6rem;
      display: inline-block;
    }
    .checkout-hero h1 {
      font-weight: 700;
      color: var(--ink-900);
      letter-spacing: -0.02em;
      font-size: 2.2rem;
    }
    .checkout-hero p {
      color: var(--ink-500);
      font-weight: 500;
      max-width: 520px;
      margin: 0 auto;
    }
    .hero-banner {
      position: relative;
      background: #ffffff;
      border-radius: 26px;
      padding: 30px 34px;
      box-shadow: var(--shadow);
      border: 1px solid var(--border);
      text-align: center;
      max-width: 920px;
      margin: 0 auto 28px;
      overflow: hidden;
    }
    .hero-banner::before,
    .hero-banner::after {
      content: "";
      position: absolute;
      width: 180px;
      height: 180px;
      border-radius: 50%;
      background: radial-gradient(circle at center, rgba(255, 111, 163, 0.25), transparent 70%);
    }
    .hero-banner::before {
      top: -90px;
      left: -60px;
    }
    .hero-banner::after {
      bottom: -100px;
      right: -40px;
    }
    .hero-banner .hero-line {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 6px 14px;
      border-radius: 999px;
      background: #fff5fb;
      color: var(--pink-700);
      font-size: 0.72rem;
      font-weight: 700;
      letter-spacing: 0.14em;
      text-transform: uppercase;
    }
    .hero-banner h1 {
      margin: 14px 0 10px;
      font-size: 2.35rem;
      color: var(--ink-900);
    }
    .hero-banner p {
      margin: 0;
      color: var(--ink-500);
      font-size: 0.98rem;
    }
    .layout-grid {
      display: grid;
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr) minmax(0, 0.9fr);
      gap: 20px;
      align-items: start;
      grid-auto-rows: auto;
    }
    @media (max-width: 991px) {
      .layout-grid {
        grid-template-columns: 1fr;
      }
    }
    .card-panel {
      background: var(--card);
      border-radius: 18px;
      padding: 26px;
      box-shadow: var(--shadow);
      border: 1px solid var(--border);
      min-height: 0;
      height: 100%;
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }
    .card-panel:hover {
      transform: translateY(-4px);
      box-shadow: 0 22px 46px rgba(255, 94, 158, 0.22);
    }
    .payment-card {
      position: relative;
    }
    .payment-card::after {
      content: "";
      position: absolute;
      inset: 8px;
      border-radius: 14px;
      border: 1px solid transparent;
      pointer-events: none;
      transition: border-color 0.25s ease, box-shadow 0.25s ease;
    }
    .payment-card:hover::after {
      border-color: rgba(255, 111, 163, 0.35);
      box-shadow: 0 0 0 2px rgba(255, 141, 184, 0.18);
    }
    .panel-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 14px;
    }
    .panel-header h3 {
      margin: 0;
      font-size: 1.1rem;
      font-weight: 700;
      color: var(--ink-900);
    }
    .tag {
      font-size: 0.65rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      padding: 4px 8px;
      border-radius: 999px;
      font-weight: 700;
    }
    .tag.popular { background: #ffe4a7; color: #7a3b00; }
    .tag.stripe { background: #efe8ff; color: #5b21b6; }
    .tag.nets { background: #ffe0ef; color: #9d174d; }
    .feature-list {
      padding-left: 1rem;
      margin-bottom: 18px;
      color: var(--ink-700);
      font-size: 0.88rem;
    }
    .feature-list li {
      margin-bottom: 6px;
    }
    .summary-panel {
      grid-row: span 2;
      align-self: start;
    }
    @media (min-width: 992px) {
      .summary-panel {
        position: sticky;
        top: 110px;
      }
    }
    .summary-title {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
      color: var(--ink-900);
      font-weight: 700;
    }
    .summary-metrics {
      font-size: 0.9rem;
      color: var(--ink-400);
    }
    .summary-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 6px;
      color: var(--ink-700);
      font-size: 0.92rem;
    }
    .summary-items {
      margin: 12px 0 16px;
      display: grid;
      gap: 8px;
    }
    .summary-divider {
      height: 1px;
      background: var(--border);
      margin: 10px 0 12px;
    }
    .summary-item {
      display: flex;
      justify-content: space-between;
      gap: 10px;
      color: var(--ink-700);
      font-size: 0.88rem;
    }
    .summary-item span:first-child {
      max-width: 70%;
    }
    .summary-item small {
      color: var(--ink-400);
      font-weight: 500;
    }
    .total-box {
      margin: 16px 0;
      padding: 16px;
      background: #fff7fb;
      border-radius: 14px;
      border: 1px solid var(--border);
    }
    .total-box span {
      display: block;
      font-size: 0.72rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--ink-400);
    }
    .total-box strong {
      font-size: 1.6rem;
      color: var(--pink-700);
    }
    .btn-outline-soft {
      border: 1px solid var(--pink-500);
      color: var(--pink-600);
      background: #fff;
      border-radius: 12px;
      font-weight: 600;
      padding: 12px 16px;
      min-height: 48px;
    }
    .btn-outline-soft:hover {
      background: var(--pink-600);
      color: #fff;
    }
    .btn-soft {
      background: #fff5fb;
      border-radius: 12px;
      border: none;
      font-weight: 600;
      color: var(--pink-700);
      padding: 12px 16px;
      min-height: 48px;
    }
    .provider-actions {
      background: #fff;
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 10px;
    }
    #paypal-button-container {
      min-height: 48px;
    }
    .btn-provider {
      border-radius: 12px;
      font-weight: 600;
      padding: 12px 16px;
      min-height: 48px;
      box-shadow: 0 10px 20px rgba(107, 92, 255, 0.12);
    }
    .btn-provider.stripe {
      background: #6b5cff;
      color: #fff;
      border: none;
    }
    .btn-provider.stripe:hover {
      filter: brightness(1.05);
      color: #fff;
    }
    .btn-provider.nets {
      background: #ffe3f1;
      color: #9d174d;
      border: 1px solid #f9a8d4;
      box-shadow: 0 10px 18px rgba(249, 168, 212, 0.3);
    }
    .btn-provider.nets:hover {
      background: #fbcfe8;
    }
    #payment-status {
      min-height: 20px;
    }
    #stripe-status {
      min-height: 20px;
    }
    .payment-status-box {
      margin-top: 14px;
      padding: 10px 12px;
      border-radius: 10px;
      border: 1px solid #f5b3cd;
      background: #fff0f7;
      color: #a3134f;
      font-weight: 600;
      font-size: 0.92rem;
      line-height: 1.35;
      min-height: 46px;
      display: none;
      align-items: center;
      gap: 8px;
    }
    .payment-status-box.show {
      display: flex;
    }
    .payment-status-box::before {
      content: "!";
      width: 20px;
      height: 20px;
      border-radius: 50%;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: #ff6fa3;
      color: #fff;
      font-size: 0.8rem;
      font-weight: 700;
      flex: 0 0 auto;
    }
    .fade-in {
      opacity: 0;
      transform: translateY(12px);
      animation: fadeUp 0.6s ease forwards;
    }
    .fade-in.delay-1 { animation-delay: 0.08s; }
    .fade-in.delay-2 { animation-delay: 0.16s; }
    .fade-in.delay-3 { animation-delay: 0.24s; }
    .fade-in.delay-4 { animation-delay: 0.32s; }
    @keyframes fadeUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* white inner box like your PayPal widget */
    .pay-widget {
      background: #fff;
      border: 1px solid #f2c6d6;
      border-radius: 12px;
      padding: 18px;
      margin-top: 14px;
    }

    /* NETS button styled like PayPal button */
    .nets-pay-btn {
      width: 100%;
      height: 52px;

      display: flex;
      align-items: center;
      justify-content: center;

      background: #ffd34d; /* PayPal-like yellow */
      border: 0;
      border-radius: 8px;

      cursor: pointer;
      transition: transform 0.15s ease, filter 0.15s ease;
    }

    .nets-pay-btn:hover {
      transform: translateY(-1px);
      filter: brightness(0.98);
    }

    .nets-pay-btn:active {
      transform: translateY(0px);
    }

    /* logo size inside button */
    .nets-pay-logo {
      height: 22px;
      width: auto;
      display: block;
    }

    /* “Powered by …” line */
    .pay-powered {
      margin-top: 10px;
      font-size: 12px;
      text-align: center;
      color: #8a8a8a;
    }

    .pay-powered-brand {
      font-weight: 700;
      color: #111;
    }
  </style>
</head>
<body>
  <%- include('partials/user_navbar') %>

  <main class="ff-main">
    <div class="container">
      <div class="hero-banner fade-in">
        <span class="hero-line">Secure checkout</span>
        <h1>Choose Your Payment</h1>
        <p>Pick PayPal, Stripe card payment, or NETS. Your order stays reserved while you confirm.</p>
      </div>

      <div class="layout-grid">
        <div class="card-panel payment-card fade-in delay-1">
          <div class="panel-header">
            <h3>PayPal</h3>
            <span class="tag popular">Popular</span>
          </div>
          <p class="summary-metrics">Log in to PayPal and confirm your payment in seconds.</p>
          <ul class="feature-list">
            <li>Purchase protection included</li>
            <li>Fast checkout on any device</li>
            <li>No card details shared</li>
          </ul>
          <div class="provider-actions">
            <div id="paypal-button-container"></div>
          </div>
          <div id="payment-status" class="payment-status-box" role="alert" aria-live="assertive"></div>
        </div>

        <div class="card-panel payment-card fade-in delay-2">
          <div class="panel-header">
            <h3>Debit or credit card</h3>
            <span class="tag stripe">Stripe</span>
          </div>
          <p class="summary-metrics">Pay securely with Stripe using Visa, Mastercard, or Amex.</p>
          <ul class="feature-list">
            <li>Secure card processing</li>
            <li>Instant confirmation</li>
            <li>Stripe test mode supported</li>
          </ul>
          <button id="stripe-checkout-btn" type="button" class="btn btn-provider stripe w-100">
            Pay with Card
          </button>
          <div id="stripe-status" class="payment-status-box" role="alert" aria-live="assertive"></div>
        </div>

        <div class="card-panel summary-panel fade-in delay-3">
          <div class="summary-title">
            <span>Order Summary</span>
            <span class="summary-metrics">Items: <%= items.length %></span>
          </div>
          <div class="summary-items">
            <% items.forEach(function(item) { %>
              <div class="summary-item">
                <span>
                  <%= item.productName || 'Item' %>
                  <small> x <%= item.quantity %></small>
                </span>
                <span>$<%= item.lineTotal.toFixed(2) %></span>
              </div>
            <% }); %>
          </div>
          <div class="summary-divider"></div>
          <div class="summary-row">
            <span>Subtotal</span>
            <span>$<%= summary.subtotal.toFixed(2) %></span>
          </div>
          <div class="summary-row">
            <span>Estimated Tax (9%)</span>
            <span>$<%= summary.taxAmount.toFixed(2) %></span>
          </div>
        <div class="total-box">
          <span>Total Due</span>
          <strong>$<%= summary.total.toFixed(2) %></strong>
        </div>
          <a href="/cart" class="btn btn-outline-soft w-100 mb-2">Back to cart</a>
          <a href="/UserProducts" class="btn btn-soft w-100">Continue shopping</a>
        </div>

        <div class="card-panel payment-card fade-in delay-4" style="grid-column: span 2;">
          <div class="panel-header">
            <h3>NETS QR</h3>
            <span class="tag nets">NETS</span>
          </div>
          <p class="summary-metrics">Scan and pay with your local bank app using NETS QR.</p>
          <ul class="feature-list">
            <li>Scan to pay in seconds</li>
            <li>Supports participating banks</li>
            <li>Secure NETS network</li>
          </ul>
          <form action="/generateNETSQR" method="POST" class="m-0">
            <input type="hidden" name="cartTotal" value="<%= summary.total.toFixed(2) %>">
            <div class="pay-widget">
              <button type="submit" class="nets-pay-btn" id="nets-generate-btn">
                <img src="images/nets-logo.jpg" alt="NETS" class="nets-pay-logo">
              </button>

              <div class="pay-powered">
                Powered by <span class="pay-powered-brand">NETS</span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://js.stripe.com/v3/"></script>
  <script id="paypal-sdk" src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=SGD&disable-funding=card"></script>
  <script>
    (function() {
      var paypalClientId = '<%= paypalClientId %>';
      var statusEl = document.getElementById('payment-status');
      var stripePublishableKey = '<%= stripePublishableKey %>';
      var stripeStatusEl = document.getElementById('stripe-status');
      var stripeButton = document.getElementById('stripe-checkout-btn');
      var paypalRendered = false;

      function setStatus(message) {
        if (!statusEl) return;
        statusEl.textContent = message || '';
        statusEl.classList.toggle('show', Boolean(message));
      }

      function setStripeStatus(message) {
        if (stripeStatusEl) {
          stripeStatusEl.textContent = message || '';
          stripeStatusEl.classList.toggle('show', Boolean(message));
        }
      }

      function renderPaypalButtons() {
        if (paypalRendered || typeof paypal === 'undefined') {
          return false;
        }

        paypalRendered = true;
        paypal.Buttons({
          createOrder: function() {
            setStatus('');
            return fetch('/checkout/paypal/create-order', {
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
            })
              .then(function(res) { return res.json(); })
              .then(function(data) {
                if (!data || !data.id) {
                  throw new Error(data && data.error ? data.error : 'Unable to create PayPal order.');
                }
                return data.id;
              })
              .catch(function(err) {
                setStatus(err.message || 'Unable to start PayPal checkout.');
                throw err;
              });
          },
          onApprove: function(data) {
            setStatus('Finalizing payment...');
            return fetch('/checkout/paypal/capture', {
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
              body: new URLSearchParams({ orderId: data.orderID })
            })
              .then(function(res) { return res.json(); })
              .then(function(result) {
                if (result && result.redirectUrl) {
                  window.location.href = result.redirectUrl;
                  return;
                }
                throw new Error(result && result.error ? result.error : 'Payment capture failed.');
              })
              .catch(function(err) {
                setStatus(err.message || 'Payment capture failed.');
              });
          },
          onError: function(err) {
            setStatus('PayPal error: ' + (err && err.message ? err.message : 'Please try again.'));
          }
        }).render('#paypal-button-container');
        return true;
      }

      if (!paypalClientId) {
        setStatus('PayPal is not configured yet. Please update the client id.');
      } else if (!renderPaypalButtons()) {
        var paypalScript = document.getElementById('paypal-sdk');
        if (paypalScript) {
          paypalScript.addEventListener('load', function() {
            renderPaypalButtons();
          });
          paypalScript.addEventListener('error', function() {
            setStatus('PayPal failed to load. Please check your connection or disable blockers.');
          });
        }
      }

      if (!stripePublishableKey) {
        setStripeStatus('Stripe is not configured yet. Please update the publishable key.');
        if (stripeButton) {
          stripeButton.disabled = true;
        }
        return;
      }

      if (typeof Stripe === 'undefined') {
        setStripeStatus('Stripe is unavailable right now. Please try again.');
        if (stripeButton) {
          stripeButton.disabled = true;
        }
        return;
      }

      var stripe = Stripe(stripePublishableKey);
      if (stripeButton) {
        stripeButton.addEventListener('click', function() {
          setStripeStatus('Redirecting to Stripe...');
          fetch('/checkout/stripe/create-session', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
          })
            .then(function(res) { return res.json(); })
            .then(function(data) {
              if (!data || !data.id) {
                throw new Error(data && data.error ? data.error : 'Unable to start Stripe checkout.');
              }
              return stripe.redirectToCheckout({ sessionId: data.id });
            })
            .then(function(result) {
              if (result && result.error) {
                throw result.error;
              }
            })
            .catch(function(err) {
              setStripeStatus(err.message || 'Stripe checkout failed.');
            });
        });
      }
    })();
  </script>
</body>
</html>
