<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin ‚Äî Products | FluffyFriend</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      display: flex;
      flex-direction: column;
      font-family: 'Segoe UI', sans-serif;
      background: #fff6fb;
    }

    main {
      flex: 1;
    }

    .navbar {
      background: linear-gradient(90deg, #ff8db8, #ff6fa3);
    }

    .navbar-brand {
      color: #fff;
      font-weight: 700;
    }

    .nav-link {
      color: #fff !important;
      font-weight: 500;
      border-radius: 8px;
      padding: 8px 14px;
    }

    footer {
      background: linear-gradient(90deg, #ff8db8, #ff6fa3);
      color: white;
      padding: 12px 0;
      margin-top: auto;
    }

    .product-thumb {
      width: 60px;
      height: 60px;
      border-radius: 10px;
      object-fit: cover;
    }

    /* Base table padding (kept) */
    .table td,
    .table th {
      padding: 6px 10px !important;
    }

    .row-link {
      cursor: pointer;
    }

    .row-link:hover {
      background: #fff1f7 !important;
    }

    /* ---- Admin products table enhancements ---- */

    .table-admin-products {
      border-collapse: separate;
      border-spacing: 0 6px;          /* little gap between rows */
      width: 100%;
    }

    .table-admin-products thead th {
      background: #ffe6f3;
      border-bottom: none;
      font-weight: 600;
    }

    .table-admin-products tbody tr {
      background: #f9f9fb;
    }

    .table-admin-products tbody tr td {
      vertical-align: middle;
    }

    /* Price & Qty column helpers */
    .price-col {
      white-space: nowrap;
    }

    .qty-col {
      text-align: center;
    }

    /* Stock level badges */
    .stock-badge {
      display: inline-flex;
      align-items: center;
      padding: 3px 10px;
      border-radius: 999px;
      font-size: 0.78rem;
      font-weight: 600;
      white-space: nowrap;
    }

    .stock-ok {
      background: #e6f9ed;
      color: #1e7e34;
    }

    .stock-low {
      background: #fff3cd;
      color: #856404;
    }

    .stock-out {
      background: #fde2e4;
      color: #c82333;
    }

    /* Admin action buttons (optional polish) */
    .btn-admin {
      border-radius: 999px;
      padding: 4px 12px;
      font-size: 0.8rem;
      font-weight: 500;
    }
    /* ---- Stock filter card ---- */
    .filter-card {
      background: #ffffff;
      border-radius: 16px;
      padding: 10px 16px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .filter-pills {
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem;
    }

    .btn-filter-pill {
      border-radius: 999px;
      border: 1px solid #ffd1e6;
      padding: 4px 12px;
      font-size: 0.8rem;
      font-weight: 500;
      background: #fff7fb;
      color: #c2185b;
    }

    .btn-filter-pill:hover {
      background: #ffe1f0;
      border-color: #ffbad8;
      color: #a31249;
    }

    .btn-filter-pill.active {
      background: #ff6fa3;
      border-color: #ff6fa3;
      color: #ffffff;
    }

    .filter-dot {
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
    }

    .dot-ok {
      background: #1e7e34;   /* matches stock-ok */
    }

    .dot-low {
      background: #856404;   /* matches stock-low */
    }

    .dot-out {
      background: #c82333;   /* matches stock-out */
    }
  </style>
</head>
<body>

  <!-- Admin navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container d-flex justify-content-between">
      <a class="navbar-brand" href="/">üêæ FluffyFriend</a>
      <div>
        <a class="nav-link d-inline" href="/admin">Admin</a>
        <a class="nav-link d-inline" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

  <main>
    <div class="container mt-3">
      <% if (success && success.length) { %>
        <div class="alert alert-success"><%= success[0] %></div>
      <% } %>
      <% if (error && error.length) { %>
        <div class="alert alert-danger"><%= error[0] %></div>
      <% } %>
    </div>

    <div class="container my-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Manage Products</h3>
        <a href="/admin/products/new" class="btn btn-sm btn-primary">+ Add Product</a>
      </div>

      <!-- Stock filter card -->
      <div class="filter-card mb-3">
        <div>
          <h6 class="mb-1">Stock filters</h6>
          <p class="mb-0 text-muted small">
            Quickly spot out-of-stock or low inventory items.
          </p>
        </div>

        <div class="filter-pills btn-group" role="group">
          <!-- All -->
          <a href="/admin/products"
            class="btn btn-filter-pill <%= !stockFilter ? 'active' : '' %>">
            All
          </a>

          <!-- In stock (includes low stock) -->
          <a href="/admin/products?stockFilter=in"
            class="btn btn-filter-pill <%= stockFilter === 'in' ? 'active' : '' %>">
            In stock&nbsp;<span class="filter-dot dot-ok"></span>
          </a>

          <!-- Low stock -->
          <a href="/admin/products?stockFilter=low"
            class="btn btn-filter-pill <%= stockFilter === 'low' ? 'active' : '' %>">
            Low stock&nbsp;<span class="filter-dot dot-low"></span>
          </a>

          <!-- Out of stock -->
          <a href="/admin/products?stockFilter=out"
            class="btn btn-filter-pill <%= stockFilter === 'out' ? 'active' : '' %>">
            Out of stock&nbsp;<span class="filter-dot dot-out"></span>
          </a>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-admin-products">
          <thead>
            <tr>
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th class="text-center">Stock Level (Qty)</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% if (products && products.length) { %>
              <% products.forEach(function (p) { %>
                <tr class="row-link" data-href="/viewProduct/<%= p.id %>">

                  <!-- ID -->
                  <td><%= p.id %></td>

                  <!-- Image -->
                  <td>
                    <img src="/images/products/<%= p.image %>" alt="<%= p.productName %>" class="product-thumb">
                  </td>

                  <!-- Name -->
                  <td class="fw-semibold"><%= p.productName %></td>

                  <!-- Category -->
                  <td><%= p.category %></td>

                  <!-- Price: just price -->
                  <td class=" ">
                    $<%= Number(p.price).toFixed(2) %>
                  </td>

                  <!-- Qty: badge only -->
                  <td class="qty-col">
                    <%
                      const qty = Number(p.quantity) || 0;
                      let badgeClass = '';
                      let badgeText  = '';

                      if (qty <= 0) {
                        badgeClass = 'stock-out';
                        badgeText  = 'Out of stock';
                      } else if (qty <= 5) {
                        badgeClass = 'stock-low';
                        badgeText  = 'Low stock';
                      } else {
                        badgeClass = 'stock-ok';
                        badgeText  = 'In stock';
                      }
                    %>

                    <span class="stock-badge <%= badgeClass %>">
                      <%= badgeText %> (<%= qty %>)
                    </span>
                  </td>
                  
                  <!-- Edit Button -->
                  <td class="text-end">
                    <a href="/admin/products/<%= p.id %>/edit"
                      class="btn btn-sm btn-outline-secondary no-row-nav me-1">
                      Edit
                    </a>



                    <!-- jiaxuan start -->
                    <a href="/admin/products/<%= p.id %>/delete"
                      class="btn btn-sm btn-outline-danger no-row-nav"
                      onclick="return confirm('Are you sure you want to delete this product?');">
                      Delete
                    </a>
                    <!-- jiaxuan end -->



                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center text-muted py-4">
                  No products yet. Click ‚ÄúAdd Product‚Äù to create one.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('tr.row-link').forEach(function (row) {
        row.addEventListener('click', function (e) {
          if (e.target.closest('.no-row-nav') || e.target.tagName === 'A' || e.target.tagName === 'BUTTON') return;
          window.location.href = row.dataset.href;
        });
      });
    });
  </script>

</body>
</html>
<!-- Isaac End -->