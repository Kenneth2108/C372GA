<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>FluffyFriend — <%= (mode==='edit'?'Edit User':'New User') %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html,body{height:100%;margin:0;display:flex;flex-direction:column;background:#fff6fb;font-family:'Segoe UI',sans-serif}
    main{flex:1}
    .navbar{background:linear-gradient(90deg,#ff8db8,#ff6fa3)}
    .navbar-brand{color:#fff;font-weight:700}
    .nav-link{color:#fff!important;border-radius:8px;padding:8px 14px;transition:.3s}
    .nav-link:hover{background:#ff8db8}
    .card-soft{background:#fff;border-radius:16px;box-shadow:0 3px 12px rgba(0,0,0,.08);border:0}
    .btn-pink{background:#ff6fa3;border:none}.btn-pink:hover{background:#ff8db8}
    footer{background:linear-gradient(90deg,#ff8db8,#ff6fa3);color:#fff;padding:12px 0;margin-top:auto}
  </style>
</head>
<body>
  <!-- Navbar. -->
  <%- include('partials/admin_navbar') %>

  <main class="container my-4" style="max-width:720px;">
    <% if (error && error.length) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>

    <% const canAssignPrivileged = user && user.role === 'master'; %>

    <div class="card card-soft p-4">
      <h4 class="mb-3"><%= (mode==='edit'?'Edit User':'Create New User') %></h4>

      <form method="post" action="<%= (mode==='edit' ? '/admin/users/'+form.id+'/edit' : '/admin/users') %>">
        <div class="mb-3">
          <label class="form-label">Username</label>
          <input class="form-control" name="username" required value="<%= form.username %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" class="form-control" name="email" required value="<%= form.email %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Password</label>
          <% if (mode==='edit') { %>
            <input
              type="password"
              class="form-control"
              name="password"
              pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{6,}"
              minlength="6"
              title="At least 6 characters with uppercase, lowercase, and a number"
            >
          <% } else { %>
            <input
              type="password"
              class="form-control"
              name="password"
              pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{6,}"
              minlength="6"
              title="At least 6 characters with uppercase, lowercase, and a number"
              required
            >
          <% } %>
          <small class="text-muted">Use at least 6 characters with uppercase, lowercase, and a number.</small>
        </div>

        <div class="mb-3">
          <label class="form-label">Address</label>
          <input class="form-control" name="address" required value="<%= form.address %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Contact</label>
          <input class="form-control" name="contact" required value="<%= form.contact %>">
        </div>

        <input type="hidden" name="role" value="<%= form.role || 'user' %>">

        <div class="d-flex gap-2">
          <button class="btn btn-pink text-white" type="submit"><%= (mode==='edit'?'Update':'Create') %></button>
          <a href="/admin/users" class="btn btn-outline-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </main>

  <footer>
    <div class="container d-flex justify-content-between align-items-center">
      <small>© <%= new Date().getFullYear() %> FluffyFriend.</small>
      <small>Made with ♥ in a pink theme.</small>
    </div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
