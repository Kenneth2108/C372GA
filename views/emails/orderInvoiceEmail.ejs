<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Invoice</title>
</head>
<body style="margin:0; padding:0; background:#fff1f6; font-family:'Segoe UI', Arial, sans-serif; color:#1f2937;">
  <table width="100%" cellpadding="0" cellspacing="0" bgcolor="#fff1f6" style="background:#fff1f6;">
    <tr>
      <td align="center" style="padding:36px 12px;">
        <table width="100%" cellpadding="0" cellspacing="0" bgcolor="#ffffff" style="background:#ffffff; max-width:640px; width:100%; border-radius:20px; overflow:hidden;">
          <tr>
            <td style="padding:0;">
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td width="50%" bgcolor="#fde7ef" style="background-color:#fde7ef; padding:24px 28px; color:#111827;">
                    <div style="text-transform:uppercase; font-size:11px; letter-spacing:2px; color:#9f1239;">Supermarket App</div>
                    <h1 style="margin:8px 0 6px; font-size:22px; line-height:1.2; color:#111827;">Order confirmed</h1>
                    <div style="font-size:13px; color:#111827;">Invoice <strong><%= order.invoiceNumber || '-' %></strong></div>
                    <% if (order.customerName || order.customerPhone) { %>
                      <div style="font-size:12px; margin-top:6px; color:#4b5563;">
                        <% if (order.customerName) { %>
                          <div>Name: <%= order.customerName %></div>
                        <% } %>
                        <% if (order.customerPhone) { %>
                          <div>Phone: <%= order.customerPhone %></div>
                        <% } %>
                      </div>
                    <% } %>
                  </td>
                  <td width="50%" align="right" bgcolor="#fde7ef" style="background-color:#fde7ef; padding:24px 28px; color:#111827;">
                    <div style="font-size:11px; text-transform:uppercase; letter-spacing:1px; color:#9f1239;">Order Date</div>
                    <div style="font-size:14px; font-weight:600; color:#111827;"><%= order.invoiceDate ? new Date(order.invoiceDate).toLocaleString() : '-' %></div>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <tr>
            <td style="padding:18px 28px 0;">
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td style="background:#fff5f8; border:1px solid #fbcfe8; border-radius:14px; padding:14px 16px;">
                    <div style="font-size:11px; color:#be185d; text-transform:uppercase; letter-spacing:1px;">Payment</div>
                    <div style="font-size:16px; font-weight:600; color:#111827;"><%= order.paymentMethod || 'Unknown' %></div>
                  </td>
                  <td width="12"></td>
                  <td style="background:#fff5f8; border:1px solid #fbcfe8; border-radius:14px; padding:14px 16px;">
                    <div style="font-size:11px; color:#be185d; text-transform:uppercase; letter-spacing:1px;">Total Paid</div>
                    <div style="font-size:16px; font-weight:600; color:#111827;">$<%= Number(order.total || 0).toFixed(2) %></div>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <% if (order.shippingAddress) { %>
          <tr>
            <td style="padding:16px 28px 0;">
              <div style="background:#fff5f8; border:1px solid #fbcfe8; border-radius:14px; padding:14px 16px;">
                <div style="font-size:11px; color:#be185d; text-transform:uppercase; letter-spacing:1px;">Shipping Address</div>
                <div style="font-size:14px; margin-top:6px; color:#1f2937;">
                  <div><%= order.shippingAddress.address || '-' %></div>
                  <div style="color:#6b7280;">Floor/Unit: <%= order.shippingAddress.floorUnit || '-' %> | Postal: <%= order.shippingAddress.postal || '-' %></div>
                </div>
              </div>
            </td>
          </tr>
          <% } %>

          <tr>
            <td style="padding:22px 28px 8px;">
              <h3 style="margin:0 0 12px; font-size:16px; color:#111827;">Order Items</h3>
              <% if (items && items.length) { %>
                <table width="100%" cellpadding="0" cellspacing="0" style="font-size:13px; border-collapse:collapse;">
                  <thead>
                    <tr style="text-transform:uppercase; font-size:11px; color:#9f1239;">
                      <th align="left" style="padding:10px 0; border-bottom:1px solid #fbcfe8;">Item</th>
                      <th align="right" style="padding:10px 0; border-bottom:1px solid #fbcfe8;">Unit Price</th>
                      <th align="right" style="padding:10px 0; border-bottom:1px solid #fbcfe8;">Qty</th>
                      <th align="right" style="padding:10px 0; border-bottom:1px solid #fbcfe8;">Line Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% items.forEach(function(item){ 
                         const qty = Number(item.quantity || 0);
                         const unitPrice = Number(item.price || 0);
                         const lineTotal = qty * unitPrice;
                    %>
                      <tr>
                        <td style="padding:10px 0; border-bottom:1px solid #fdf2f8;"><%= item.productName || ('Product #' + item.id) %></td>
                        <td style="padding:10px 0; text-align:right; border-bottom:1px solid #fdf2f8;">$<%= unitPrice.toFixed(2) %></td>
                        <td style="padding:10px 0; text-align:right; border-bottom:1px solid #fdf2f8;"><%= qty %></td>
                        <td style="padding:10px 0; text-align:right; border-bottom:1px solid #fdf2f8;">$<%= lineTotal.toFixed(2) %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              <% } else { %>
                <div style="color:#6b7280; font-size:13px;">No items found.</div>
              <% } %>
            </td>
          </tr>

          <tr>
            <td style="padding:8px 28px 26px;">
              <table width="100%" cellpadding="0" cellspacing="0" style="font-size:14px;">
                <tr>
                  <td style="padding:6px 0; color:#6b7280;">Subtotal</td>
                  <td style="padding:6px 0; text-align:right;">$<%= Number(order.subtotal || 0).toFixed(2) %></td>
                </tr>
                <tr>
                  <td style="padding:6px 0; color:#6b7280;">Tax</td>
                  <td style="padding:6px 0; text-align:right;">$<%= Number(order.taxAmount || 0).toFixed(2) %></td>
                </tr>
                <tr>
                  <td style="padding:10px 0; color:#111827; font-weight:600; border-top:1px solid #fbcfe8;">Total</td>
                  <td style="padding:10px 0; text-align:right; font-weight:600; border-top:1px solid #fbcfe8;">$<%= Number(order.total || 0).toFixed(2) %></td>
                </tr>
              </table>
            </td>
          </tr>

          <tr>
            <td style="padding:16px 28px 24px; background:#fff5f8; color:#6b7280; font-size:12px;">
              Thank you for shopping with Supermarket App. This is an automated invoice.
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
