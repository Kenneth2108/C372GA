<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Sales Report</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #fff6fb;
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .navbar {
      background: linear-gradient(90deg, #ff8db8, #ff6fa3);
    }
    .navbar-brand {
      color: white;
      font-weight: 700;
    }
    .nav-link {
      color: white !important;
      border-radius: 8px;
      padding: 8px 14px;
    }
    .nav-link:hover {
      background: #ff8db8;
    }
    main {
      flex: 1 0 auto;
      padding-bottom: 2rem;
    }
    .page-shell {
      background: #fff;
      border-radius: 24px;
      padding: 1.5rem;
      box-shadow: 0 24px 50px rgba(0, 0, 0, 0.08);
    }
    .stat-card {
      background: #fff;
      border-radius: 16px;
      padding: 18px 20px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.06);
    }
    .stat-card small {
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: #b98ca3;
      font-weight: 600;
    }
    .stat-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: #ff6fa3;
      margin-bottom: 0;
    }
    .chart-card {
      background: #fff;
      border-radius: 18px;
      padding: 16px;
      box-shadow: 0 16px 32px rgba(255, 111, 163, 0.12);
    }
    .chart-card canvas {
      max-width: 100%;
    }
    #revenueChart,
    #ordersChart {
      height: 140px !important;
    }
    #paymentChart {
      height: 220px !important;
    }
    .table-card {
      background: #fff;
      border-radius: 18px;
      padding: 16px;
      box-shadow: 0 16px 32px rgba(0,0,0,0.06);
    }
    .badge-soft {
      background: rgba(255, 111, 163, 0.12);
      color: #ff6fa3;
      border-radius: 999px;
      padding: 6px 12px;
      font-size: 0.8rem;
      font-weight: 600;
    }
    .btn-outline-pink {
      border: 1px solid #ff6fa3;
      color: #ff6fa3;
    }
    .btn-outline-pink:hover {
      background: #ff6fa3;
      color: #fff;
    }
    @media (max-width: 992px) {
      .charts-grid {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/admin_navbar') %>

  <main class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
      <div>
        <h2 class="fw-bold mb-0">Sales Performance Report</h2>
        <p class="text-muted mb-0">Overview of revenue, orders, refunds, and top products.</p>
      </div>
      <span class="badge-soft">Top 3 Products</span>
    </div>

    <div class="page-shell">
      <form class="row g-3 mb-4" method="GET" action="/admin/reports/sales">
        <div class="col-md-4">
          <label class="form-label small text-muted mb-1">Start date</label>
          <input type="date" class="form-control" name="start" value="<%= range.startStr %>">
        </div>
        <div class="col-md-4">
          <label class="form-label small text-muted mb-1">End date</label>
          <input type="date" class="form-control" name="end" value="<%= range.endStr %>">
        </div>
        <div class="col-md-4 d-flex align-items-end gap-2">
          <button class="btn btn-outline-pink w-100" type="submit">Apply Filter</button>
          <a class="btn btn-outline-secondary w-100" href="/admin/reports/sales">Reset</a>
        </div>
      </form>

      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="stat-card">
            <small>Total Revenue</small>
            <p class="stat-value">$<%= summary.grossRevenue.toFixed(2) %></p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <small>Net Revenue</small>
            <p class="stat-value">$<%= netRevenue.toFixed(2) %></p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <small>Orders</small>
            <p class="stat-value"><%= summary.orderCount %></p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <small>Avg Order Value</small>
            <p class="stat-value">$<%= summary.avgOrderValue.toFixed(2) %></p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <small>Refunds</small>
            <p class="stat-value">$<%= summary.refundsTotal.toFixed(2) %></p>
          </div>
        </div>
      </div>

      <div class="d-flex gap-3 charts-grid mb-4">
        <div class="chart-card flex-fill">
          <h6 class="fw-semibold mb-3">Daily Revenue</h6>
          <canvas id="revenueChart" height="140"></canvas>
        </div>
        <div class="chart-card flex-fill">
          <h6 class="fw-semibold mb-3">Orders by Day</h6>
          <canvas id="ordersChart" height="140"></canvas>
        </div>
      </div>

      <div class="d-flex gap-3 charts-grid mb-4">
        <div class="chart-card flex-fill">
          <h6 class="fw-semibold mb-3">Payment Method Breakdown</h6>
          <canvas id="paymentChart" height="160"></canvas>
        </div>
        <div class="table-card flex-fill">
          <h6 class="fw-semibold mb-3">Top 3 Products</h6>
          <% if (topProducts && topProducts.length) { %>
            <div class="table-responsive">
              <table class="table table-sm align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Product</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Revenue</th>
                  </tr>
                </thead>
                <tbody>
                  <% topProducts.forEach(function(item) { %>
                    <tr>
                      <td><%= item.productName %></td>
                      <td class="text-center"><%= item.totalQty %></td>
                      <td class="text-end">$<%= item.revenue.toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <p class="text-muted mb-0">No sales data for this period.</p>
          <% } %>
        </div>
      </div>

      <div class="table-card">
        <h6 class="fw-semibold mb-3">Payment Summary</h6>
        <% if (paymentBreakdown && paymentBreakdown.length) { %>
          <div class="table-responsive">
            <table class="table table-sm align-middle">
              <thead class="table-light">
                <tr>
                  <th>Payment Method</th>
                  <th class="text-center">Orders</th>
                  <th class="text-end">Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% paymentBreakdown.forEach(function(row) { %>
                  <tr>
                    <td><%= row.payment %></td>
                    <td class="text-center"><%= row.orderCount %></td>
                    <td class="text-end">$<%= row.revenue.toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted mb-0">No payment data for this period.</p>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script>
    const dailyLabels = <%- JSON.stringify((dailyStats || []).map(row => row.day)) %>;
    const prettyDate = (value) => {
      if (!value) return '';
      const date = new Date(value);
      if (Number.isNaN(date.getTime())) return String(value);
      return date.toLocaleDateString(undefined, { month: 'short', day: 'numeric' });
    };
    const dailyLabelPretty = dailyLabels.map(prettyDate);
    const dailyRevenue = <%- JSON.stringify((dailyStats || []).map(row => row.revenue)) %>;
    const dailyOrders = <%- JSON.stringify((dailyStats || []).map(row => row.orderCount)) %>;
    const paymentLabels = <%- JSON.stringify((paymentBreakdown || []).map(row => row.payment)) %>;
    const paymentRevenue = <%- JSON.stringify((paymentBreakdown || []).map(row => row.revenue)) %>;

    const revenueCtx = document.getElementById('revenueChart');
    if (revenueCtx) {
      new Chart(revenueCtx, {
        type: 'line',
        data: {
          labels: dailyLabelPretty,
          datasets: [{
            label: 'Revenue',
            data: dailyRevenue,
            borderColor: '#ff6fa3',
            backgroundColor: 'rgba(255,111,163,0.15)',
            fill: true,
            tension: 0.35,
            pointRadius: 3
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                title: (items) => items[0] ? items[0].label : ''
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: { callback: (value) => '$' + Number(value).toFixed(2) }
            }
          }
        }
      });
    }

    const ordersCtx = document.getElementById('ordersChart');
    if (ordersCtx) {
      new Chart(ordersCtx, {
        type: 'bar',
        data: {
          labels: dailyLabelPretty,
          datasets: [{
            label: 'Orders',
            data: dailyOrders,
            backgroundColor: '#ff9fd3'
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                title: (items) => items[0] ? items[0].label : ''
              }
            }
          },
          scales: {
            y: { beginAtZero: true, ticks: { precision: 0 } }
          }
        }
      });
    }

    const paymentCtx = document.getElementById('paymentChart');
    if (paymentCtx) {
      new Chart(paymentCtx, {
        type: 'doughnut',
        data: {
          labels: paymentLabels,
          datasets: [{
            data: paymentRevenue,
            backgroundColor: ['#ff6fa3', '#ffbf47', '#7dd3fc', '#a78bfa']
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { position: 'bottom' } }
        }
      });
    }
  </script>
</body>
</html>
